{# src/AppBundle/Resources/views/tache/index.html.twig #}

{% extends "base.html.twig" %}

{% block main %}
<div class="item-actions navbar-right">
    <a href="{{ path('ajouter_user') }}" class="btn btn-sm btn-success">
            <i class="fa fa-edit"></i> Ajouter un utilisateur
    </a>
</div>
<table class="table table-striped">
        <thead>
            <tr>
                <th><i class="fa fa-cogs"></i> Utilisateur</th>
                <th><i class="fa fa-cogs"></i> Email</th>
                <th><i class="fa fa-cogs"></i> Roles</th>
            </tr>
        </thead>
        <tbody>
        {% for user in listeUsers %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {% for role in user.roles %}
                        <li>{{ role }}</li>
                    {% endfor %}
                </td>
                <td>
                    <div class="item-actions">
                            <a href="{{ path('modifier_user', { id: user.id }) }}" class="btn btn-sm btn-primary">
                                <i class="fa fa-edit"></i> Modifier
                            </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucune Tache n'est trouv√©e</td>
           </tr>
        {% endfor %}
        </tbody>
</table>
{% endblock %}