{% if show_confirmation|default(false) %}
    {% set attr = {'data-confirmation': 'true'} %}
    {{ include('default/_supprimer_confirmation.html.twig') }}
{% endif %}

{{ form_start(form, { attr: attr|default({}) }) }}
    {{ form_widget(form) }}

    <input type="submit" value="{{ button_label|default('nouveau') }}"
           class="{{ button_css|default("btn btn-primary") }}" />

    {% if include_back_to_home_link|default(false) %}
        <a href="{{ path('homepage') }}" class="btn btn-link">
            Page d'acceuil
        </a>
    {% endif %}
{{ form_end(form) }}
